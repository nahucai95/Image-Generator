{
  "rewrites": [
    {
      "source": "/api/generate-image",
      "destination": "/api/generate-img"
    },
    {
      "source": "/api/generate-image/(.*)",
      "destination": "/api/generate-img"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=1, stale-while-revalidate" }
      ]
    }
  ]
}